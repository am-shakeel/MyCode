package DP;

import java.util.Arrays;

public class MaxContinuousSubArray {

	public static void main(String[] args) {
		
		int arr[] = { -2, 1, -3, 4, -1, 2, 1, -5, 4 };
		
		int cache[] = new int[arr.length]; 
		
		cache[0] = arr[0] ; 
		
		for ( int i=1 ; i<cache.length ; i++ ) { 
			cache[i] = Math.max(arr[i], cache[i-1] + arr[i]) ; 
		}
		

		System.out.println(maxContinuousSubArrayBottomUp(arr, cache));
		
	}
	
	public static void maxContinuousSubArrayTopDown() {
		
	}
	
	public static int maxContinuousSubArrayBottomUp(int[] arr, int[] cache) {
		Arrays.sort(cache); 
		return cache[cache.length-1]; 
	}
	
}
